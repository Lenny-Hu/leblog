.post-content
  .ui.grid
    .four.wide.column
      a.avatar.avatar-link(href=`/posts?creator=${article.creator._id}`, data-title=`${article.creator.name} | ${({m: '男', f: '女', x: '保密'})[article.creator.gender]}`, data-content=`${article.creator.bio}`)
        img.avatar(src=`${article.creator.avatar}`)
    .eight.wide.column
      .ui.segment
        h3
          a(href=`/posts/${article._id}`) #{article.title}
        pre #{article.content}
        div
          span.tag #{article.createAt}
          span.tag.right
            span 浏览(#{article.pv || 0})
            span &nbsp;&nbsp;
            span 留言(#{article.commentsCount || 0})

            if user && article.creator._id && user._id.toString() === article.creator._id.toString()
              span &nbsp;&nbsp;
              .ui.inline.dropdown
                .text
                i.dropdown.icon
                .menu
                  .item
                    a(href=`/posts/${article._id}/edit`) 编辑
                  .item
                    a(href=`/posts/${article._id}/remove`) 删除