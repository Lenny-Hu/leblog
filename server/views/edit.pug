extends layout

block content
  .ui.grid
    .four.wide.column
      a.avatar(href=`/posts?creator=${user._id}`, data-title=`${user.name} | ${({m: '男', f: '女', x: '保密'})[user.gender]}`, data-content=`${user.bio}`)
        img.avatar(src=`${user.avatar}`)
    .eight.wide.column
      form.ui.form.segment(method='post', action=`/posts/${article._id}/edit`)
        .field.required
          label 标题
          input(type='text', name='title', value=`${article.title}`)
        .field.required
          label 内容
          textarea(name='content', rows='15') #{article.content}
        input.ui.button(type='submit', value='发布')